<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Admin panel"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/adddoctor"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp"
                        android:src="@drawable/adddoctor"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:text="Add Doctor"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/removedoctor"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp"
                        android:src="@drawable/removedoctor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Delete Doctor"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/seedoctor"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp"
                        android:src="@drawable/seedoc"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:text="See Doctor"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/seepatient"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp"
                        android:src="@drawable/seepat"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:text="See Patient"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/addadmin"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/addadmin" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Add Admin"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_margin="20dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="23dp"
                android:layout_width="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logout" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>