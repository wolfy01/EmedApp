<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Doctor"
                    android:textColor="@color/black"
                    android:textSize="38dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/patientlist"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp"
                            android:src="@drawable/seepatientlist"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:text="See patient list"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/notes"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="90dp"
                            android:src="@drawable/sendnotestopatient"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Send notes to patient"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/approval"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp"
                            android:src="@drawable/approval"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:text="Approval"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bloodbank"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp"
                            android:src="@drawable/bloodbanklogo"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:text="Blood Bank"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/clearday"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp"
                            android:src="@drawable/ress"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:text="Reset schedule"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/logout"
                    android:layout_margin="20dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="23dp"
                    android:layout_width="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp"
                            android:src="@drawable/logout"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:text="Logout"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>